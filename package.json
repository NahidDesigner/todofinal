{
  "name": "smart-todo-learning-admin",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "functions",
    "web"
  ],
  "scripts": {
    "dev": "pnpm -C web dev",
    "build": "pnpm -C web build && pnpm -C functions build",
    "preview": "pnpm -C web preview",
    "functions:build": "pnpm -C functions build",
    "functions:deploy": "firebase deploy --only functions",
    "lint": "echo 'Add linter if needed'",
    "test:e2e": "pnpm -C web test:e2e"
  }
}